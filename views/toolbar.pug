v-toolbar.safe-area-inset-padding(fixed, flat, dark, dense, style="background-color: rgba(0, 0, 0, 0.7) !important;")
    v-toolbar-side-icon(@click="supporter.drawer = !supporter.drawer")
    v-toolbar-title.ml-2(onclick="window.location.href='/'") IoT Shared Platform
    v-spacer
    template(v-if="auth.user === null")
        v-btn(flat, dark, icon, v-if="$vuetify.breakpoint.xsOnly", @click="auth.loginDialog = true;")
            v-icon account_circle
        v-btn(v-else, flat, dark, @click="auth.loginDialog = true;") Login
    template(v-else)
        v-avatar.mr-2(:tile='false', size='30px', @click="auth.toggleDialog();")
            img(:src='auth.user.photo', alt='Avatar')


