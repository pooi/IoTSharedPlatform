v-toolbar.safe-area-inset-padding(fixed, flat, dark, dense, style="background: transparent;")
    v-toolbar-side-icon(@click="supporter.drawer = !supporter.drawer")
    v-toolbar-title.ml-2(onclick="window.location.href='/'") IoT Shared Platform
    v-spacer
    template(v-if="auth.user === null")
        v-btn(flat, dark, icon, v-if="$vuetify.breakpoint.xsOnly", @click="auth.loginDialog = true;")
            v-icon account_circle
        v-btn(v-else, flat, dark, @click="auth.loginDialog = true;") Login
    template(v-else)
        v-avatar.mr-2(:tile='false', size='30px', @click="auth.toggleDialog();")
            img(:src='auth.user.photo', alt='Avatar')
    v-menu(bottom, left, v-if="$vuetify.breakpoint.xsOnly ")
        v-btn(slot='activator', dark, icon)
            v-icon more_vert
        v-list.dal-card
            v-list-tile(v-for="(toolbar, i) in toolbarItems", :key="i", :href="'#' + toolbar.href")
                v-list-tile-title {{toolbar.title}}
            //v-list-tile(href="#home")
            //    v-list-tile-title Home
            //v-list-tile(href="#about")
            //    v-list-tile-title About
    v-toolbar-items(v-else)
        template(v-for="toolbar in toolbarItems")
            v-btn(flat, style='height: auto;', :color="toolbar.color", :href="'#' + toolbar.href") {{toolbar.title}}
